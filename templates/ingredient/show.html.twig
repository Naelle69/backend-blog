{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Origin</th>
                <td>{{ ingredient.origin }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ingredient.price }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ ingredient.unit }}</td>
            </tr>
            <tr>
                <th>IsOrganic</th>
                <td>{{ ingredient.isOrganic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>EcoImpact</th>
                <td>{{ ingredient.ecoImpact }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ ingredient.source }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredient_index') }}">back to list</a>

    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('ingredient/_delete_form.html.twig') }}
{% endblock %}
